                <div class="form-group">
                    <label class="control-label">Tipo de Identificación:</label>
                    @if (Model.TipoIdentificaion == "C")
                    {
                        <strong>Cédula</strong>
                    }
                    else if (Model.TipoIdentificaion == "R")
                    {
                        <strong>Ruc</strong>
                    }
                    else if (Model.TipoIdentificaion == "p")
                    {
                        <strong>Pasaporte</strong>
                    }
                    else
                    {
                        <strong>Otro</strong>
                    }
                </div>
