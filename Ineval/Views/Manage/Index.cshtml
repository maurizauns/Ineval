                    <strong>@(Model.NombresCompletos ?? " Ninguno")</strong>
                </div>
                <div class="form-group">
                    <label class="control-label">Email:</label>
                    <strong>@(Model.Email ?? " Ninguno")</strong>
                </div>
                <div class="form-group">
